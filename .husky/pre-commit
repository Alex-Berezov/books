#!/bin/sh

# Yarn classic only; abort if yarn not installed
command -v yarn >/dev/null 2>&1 || { echo >&2 "Yarn is required but it's not installed. Skipping pre-commit checks."; exit 0; }

# Stage-wise lint-staged (runs on staged files)
yarn lint-staged

# Fast typecheck for whole project
printf "\nRunning typecheck...\n"
yarn typecheck
