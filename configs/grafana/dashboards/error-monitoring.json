{
  "dashboard": {
    "id": null,
    "title": "Books App - Error Monitoring",
    "tags": ["books-app", "errors", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Current Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "books_app:http_error_ratio:rate5m",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "orange", "value": 5 },
                { "color": "red", "value": 10 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "5xx Errors per Minute",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_request_duration_seconds_count{status_code=~\"5..\"}[1m])) * 60",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "4xx Errors per Minute",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_request_duration_seconds_count{status_code=~\"4..\"}[1m])) * 60",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 50 }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Slowest Endpoints (P99 > 1s)",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (route, le)) > 1)",
            "format": "table",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "Error Rate Trend",
        "type": "graph",
        "targets": [
          {
            "expr": "books_app:http_error_ratio:rate5m",
            "legendFormat": "Error Rate %",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "yAxes": [
          {
            "unit": "percent",
            "min": 0
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [5],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "10s",
          "handler": 1,
          "name": "High Error Rate Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 6,
        "title": "Errors by Status Code",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_request_duration_seconds_count{status_code=~\"4..\"}[1m])) * 60",
            "legendFormat": "4xx Errors",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_request_duration_seconds_count{status_code=~\"5..\"}[1m])) * 60",
            "legendFormat": "5xx Errors",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "yAxes": [
          {
            "unit": "short"
          }
        ]
      },
      {
        "id": 7,
        "title": "Errors by Endpoint",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_request_duration_seconds_count{status_code=~\"[45]..\"}[1m])) by (route)",
            "legendFormat": "{{route}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 9,
          "w": 24,
          "x": 0,
          "y": 17
        },
        "yAxes": [
          {
            "unit": "reqps"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
